
{
  "compilerOptions": {
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
  }
  },
  "include": ["src/**/*"]
}

